{
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://www.facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": ["background/index.js"]
  },
  "browser_action": {
    "default_title": "bookmark-fb",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "background"
  ]
}
