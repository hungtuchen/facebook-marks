{
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://www.facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "js": ["content/index.js"]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": ["background/index.js"]
  },
  "permissions": [
    "background",
    "bookmarks",
    "https://www.facebook.com/*",
    "http://www.facebook.com/*"
  ]
}
